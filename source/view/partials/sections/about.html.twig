<section id="features" class="border-bottom no-padding-bottom xs-onepage-section">
    <div class="container">
        <div class="row mt-5">
            <!-- section title -->
            <div class="col-md-12 text-center">
                <span class="title-number">01</span>
                <h3 class="section-title no-padding">Über mich</h3>
            </div>
            <!-- end section title -->
        </div>
        <div class="row justify-content-center margin-ten no-margin-bottom">
            <div class="col-6 col-sm-4 xs-margin-bottom-ten">
                <!--<img src="https://placehold.it/630x638" alt=""/>-->
