                        <li><span class="font-weight-600">Email:</span> {{ about.email }}</li>
                        <li><span class="font-weight-600">Phone:</span> {{ about.phone }}</li>
                        <li><span class="font-weight-600">Nationalität:</span> {{ about.nationality }}</li>
                    </ul>
                    <!--<a class="highlight-button-dark btn btn-medium button" href="{{ about.resume }}" target="_blank">
